<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ninehcom.mapper.UserInfoMapper">
    <resultMap type="com.ninehcom.entity.UserInfo" id="userInfoMap">
        <id column="id" property="Id"/>
        <result column="union_id" property="unionId"/>
        <result column="open_id" property="openid"/>
        <result column="phone_number" property="PhoneNumber"/>
        <result column="nick_name" property="NickName"/>
        <result column="head_img_url" property="headimgurl"/>
        <result column="password" property="password"/>
        <result column="created_at" property="CreatedAt"/>
        <result column="updated_at" property="UpdatedAt"/>

    </resultMap>



    <insert id="insertUser">
        INSERT INTO rm_user
        (id,union_id, open_id, phone_number,nick_name,head_img_url,password,created_at,updated_at)
        VALUES ( #{Id},#{unionId}, #{openid},#{PhoneNumber},#{NickName},#{headimgurl},#{password},now(),now());
    </insert>

    <select id="selectUserInfoById" resultMap="userInfoMap">
        SELECT
        *
        FROM
        rm_user
        WHERE
        id = #{0}
    </select>

    <update id="updateUserPass">
        UPDATE rm_user set password=#{password} where id=#{Id}

    </update>


</mapper>

